// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Changes {
  id      Int    @id @default(autoincrement())
  title   String @db.VarChar(255)
  content String
  version String @db.VarChar(5)
  Data    Data?  @relation(fields: [dataId], references: [id])
  dataId  Int?
}

model Author {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(128)
  avatarUrl  String       @db.VarChar(255)
  Extensions Extensions[]
}

model Banner {
  id   Int    @id @default(autoincrement())
  url  String @db.VarChar(255)
  name String @db.VarChar(255)
  Data Data[]
}

model Data {
  id          Int          @id @default(autoincrement())
  banner      Banner       @relation(fields: [bannerId], references: [id])
  Extensions  Extensions[]
  name        String       @db.VarChar(50)
  description String
  verified    Boolean
  changes     Changes[]
  bannerId    Int
}

model Extensions {
  id        Int    @id @default(autoincrement())
  author    Author @relation(fields: [authorId], references: [id])
  authorId  Int
  version   String @db.VarChar(5)
  downloads Int
  data      Data   @relation(fields: [dataId], references: [id])
  dataId    Int
}

model Test {
  id   Int    @id @default(autoincrement())
  text String @db.VarChar(55)
}

model Auth {
  id                Int    @id @default(autoincrement())
  publicAccessToken String @db.VarChar(55)
  accessToken       String @db.VarChar(55)
  refreshToken      String @db.VarChar(55)
  expiresIn         BigInt
  userId            String @db.VarChar(55)
}
